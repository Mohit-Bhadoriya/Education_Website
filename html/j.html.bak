<html>
<head>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<style>
.text{
font-size:18px;
position:absolute;
top:-100px;
width:290px;
z-index:3;
background-color:rgba(255,255,255,0.8);
border-radius:30px;
text-align:center;
}


</style>


</head>
<body>
<div style="width:300px;height:250px;border:1px solid black;overflow:hidden;">

<h1 id="ans" class="ans" style="top: 150px;">Welcome to Nidhi Computer Education</h1>

<img style="position: relative; opacity: 1; top: 0px;" src="jauery_animation\sky.jpg" id="jan" width="300px">

<img src="jauery_animation\cloud.png" id="cl" style="position: relative; left: 10px; top: -300px; width: 300px;">

<img src="jauery_animation\sun.png" id="sun" style="position: absolute; width: 200px; top: 0px; left: 100px; opacity: 1;">


<img src="jauery_animation\cloud.png" id="cl2" style="position: relative; left: 50px; top: -540px; width: 300px; opacity: 0.4;">
</div>




</div>
<script>
 


 $("#jan").animate({opacity: 1,top:0},2000,function(){ 
 
 $("#ans").animate({top:150});
  $("#cl").animate({left:10},7000);
    $("#cl2").animate({left:50},6000,function(){
	
		 $("#sun").animate({opacity:1,top:0},2000);
	});
 });


</script>

